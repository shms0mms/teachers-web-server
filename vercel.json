{
	"version": 2,
	"builds": [
		{
			"src": "./app/wsgi.py",
			"use": "@vercel/python",
			"config": {
				"maxLambdaSize": "50mb", // Увеличьте размер для большего объема данных
				"runtime": "python3.9"
			}
		},
		{
			"src": "build_files.sh",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "staticfiles_build"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "./app/wsgi.py"
		},
		{
			"src": "/(.*)",
			"dest": "./app/wsgi.py"
		}
	]
}
